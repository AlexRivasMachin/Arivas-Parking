<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ajustes.AjustesElminarCuentaFragment">

    <ImageView
        android:id="@+id/volverAjustesEliminarCuentaImage"
        android:layout_width="76dp"
        android:layout_height="25dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/atras"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/Ajustes"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:textAlignment="viewStart" />

    <TextView
        android:id="@+id/Ajustes"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="45dp"
        android:text="@string/title_eliminar_cuenta"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volverImageConfirmarReserva"
        tools:ignore="UnknownIdInLayout" />

    <Button
        android:id="@+id/eliminarCuenta"
        android:layout_width="320dp"
        android:layout_marginTop="512dp"
        android:text="Eliminar cuenta"
        app:layout_constraintTop_toBottomOf="@+id/Ajustes"
        tools:layout_editor_absoluteX="45dp"
        android:layout_height="40dp"
        tools:ignore="MissingConstraints"
        />


</androidx.constraintlayout.widget.ConstraintLayout>