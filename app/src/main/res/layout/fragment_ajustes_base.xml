<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.ajustes.AjustesBaseFragment">

    <ImageView
        android:id="@+id/volverMainImage"
        android:layout_width="76dp"
        android:layout_height="25dp"
        android:backgroundTint="#FF0000"
        android:src="@drawable/atras"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:textAlignment="viewStart" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="272dp"
        android:layout_height="207dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coche_ajustes"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/Ajustes"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:text="@string/title_ajustes"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ajustes">

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:color="@color/blue_main" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/notificacionesSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:text="Notificaciones:"
            android:textSize="16sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/modificarDatos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="Modificar datos personales"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            app:icon="@drawable/accesibility"
            app:iconGravity="end"
            app:rippleColor="@color/colorPrimary"
            app:strokeColor="@color/blue_main" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/cerrarSesion"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:text="Cerrar sesiÃ³n"
            android:textColor="@color/blue_main"
            android:textSize="16sp"
            app:icon="@drawable/close_session"
            app:iconGravity="end"
            app:rippleColor="@color/colorPrimary"
            app:strokeColor="@color/blue_main" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/eliminarCuenta"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="16dp"
            android:text="Eliminar cuenta de usuario"
            android:textColor="@color/red_main"
            app:icon="@drawable/delete_acc"
            app:iconGravity="end"
            app:iconTint="@color/red_main"
            app:strokeColor="@color/red_main" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:color="@color/blue_main" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>