<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="#00FFFFFF"
    android:layout_gravity="center|top"
    card_view:cardElevation="0dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reservation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="0dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="0dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:indicatorColor="@color/blue_main"
                        card_view:trackThickness="3dp" />

                    <ImageView
                        android:id="@+id/reservation_past_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/auto" />
                </FrameLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/past_reservation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:checkable="false"
                    android:text="XX"
                    android:textSize="11dp"
                    card_view:checkedIcon="@drawable/calendar_icon"
                    card_view:chipIcon="@drawable/calendar_icon"
                    card_view:chipIconTint="@null"
                    card_view:chipStrokeWidth="1dp"
                    card_view:closeIconEnabled="false"
                    card_view:iconEndPadding="8dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/past_reservation_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:checkable="false"
                    android:text="XX"
                    android:textSize="11dp"
                    card_view:checkedIcon="@drawable/ic_reservas_pasadas"
                    card_view:chipIcon="@drawable/ic_reservas_pasadas"
                    card_view:chipIconTint="@null"
                    card_view:chipStrokeWidth="1dp"
                    card_view:closeIconEnabled="false"
                    card_view:iconEndPadding="8dp" />

            </LinearLayout>

            <Button
                android:id="@+id/eliminar_buttom"
                style="@style/Widget.Material3.Button.Icon"                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="0dp"
                android:layout_gravity="end"
                android:text="eliminar"
                android:backgroundTint="#0CFF0000"
                android:textColor="#D70202"
                android:contentDescription="standard_icon_btn_desc"
                app:icon="@drawable/delete_red"
                card_view:iconTint="#D70202" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp">


                </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.cardview.widget.CardView>
