<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="#00FFFFFF"
    android:layout_gravity="center|top"
    card_view:cardElevation="0dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reservation_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="0dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
>

                <TextView
                    android:id="@+id/reserva_pasada_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Reserva pasada"
                    android:layout_gravity="start|center_vertical"
                />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/past_reservation_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/auto"
                    app:chipIcon="@drawable/auto"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    app:iconEndPadding="8dp" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">



                <com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/past_reservation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:checkable="false"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/calendar_blank_icon"
                    app:chipIcon="@drawable/calendar_blank_icon"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    app:iconEndPadding="8dp" />

                <com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/past_reservation_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:checkable="false"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/ic_reservas_pasadas"
                    app:chipIcon="@drawable/ic_reservas_pasadas"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    app:iconEndPadding="8dp" />

                <com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/past_reservation_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="8dp"
                    android:checkable="false"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/ic_reservas_pasadas"
                    app:chipIcon="@drawable/ic_reservas_pasadas"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    app:iconEndPadding="8dp" />

            </LinearLayout>

            <Button
                android:id="@+id/eliminar_buttom"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="eliminar"
                android:textColor="#D70202"
                app:icon="@drawable/delete_red"
                card_view:iconTint="#D70202" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.cardview.widget.CardView>
