<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo"
    card_view:cardBackgroundColor="#00FFFFFF"
    card_view:cardElevation="0dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reservation_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp"
        android:padding="0dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:padding="1dp"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Reserva activa:"
                    />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_margin="0dp"
                android:layout_marginEnd="4dp"
                android:checkable="false"
                android:padding="0dp"
                android:text="Pulse aqui para ver su reserva"
                android:textAlignment="gravity"
                android:textSize="10dp"
                android:textStyle="italic"
                card_view:checkedIcon="@drawable/info_filled"
                card_view:chipIcon="@drawable/info_filled"
                card_view:chipStrokeWidth="0dp"
                card_view:closeIconEnabled="false"
                card_view:iconEndPadding="0dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                >
>

                <com.google.android.material.chip.Chip
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/reservation_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="16dp"
                    app:checkedIcon="@drawable/auto"
                    app:chipIcon="@drawable/auto"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    android:checkable="false"
                    app:iconEndPadding="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="start|center"
                    />

                <com.google.android.material.chip.Chip
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/reservation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/calendar_blank_icon"
                    app:chipIcon="@drawable/calendar_blank_icon"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    android:checkable="false"
                    app:iconEndPadding="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    />

                <com.google.android.material.chip.Chip
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/reservation_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textSize="11dp"
                    app:checkedIcon="@drawable/ic_reservas_pasadas"
                    app:chipIcon="@drawable/ic_reservas_pasadas"
                    app:chipIconTint="@null"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEnabled="false"
                    android:checkable="false"
                    app:iconEndPadding="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.cardview.widget.CardView>
